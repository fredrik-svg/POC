[Unit]
Description=AI Voice Client (OpenAI Realtime) - Pi 5
After=network-online.target sound.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/pi/ai-realtime-poc/pi-client/pi_realtime_client.py
WorkingDirectory=/home/pi/ai-realtime-poc/pi-client
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
